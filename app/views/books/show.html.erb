<div>
  <%= flash[:notice] %>
</div>

<%= render 'list', user: @user, book: @book %>
  <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
    <thead>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to book.user.name, user_path(@user.id) %></td>
          <td><%= link_to book.title, book_path(@book.id) %></td>
          <td><%= book.body %></td>
          <% if @user == current_user %>
          <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-success" %></td>
          <td><%= link_to "Delete", book_path(book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
        <% end %>
    </tbody>
  </table>
<%= render 'books/bottom' %>