<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <div>
              <%= f.text_field :name, autofocus: true, id:"inputName"%>
            </div>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label>
            <div>
              <%= f.file_field :profile_image, accept: "image/*" %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputIntroduction">Introduction</label>
            <div>
              <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction"%>
            </div>
          </div>
          <div class="form-group">
            <div>
              <%= f.submit "Update User" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>